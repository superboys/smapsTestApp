<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/fragment_web_dashboard_parent_llWater"
            style="@style/Style_llWebDashboard">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Style_tvWebDashboardParent"
                android:text="@string/lbl_web_dashboard_water" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_web_dashboard_parent_ivWater"
                style="@style/Style_ivWebDashboard"
                android:src="@drawable/ic_dashboard_infinity_water" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_web_dashboard_parent_llPower"
            style="@style/Style_llWebDashboard">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Style_tvWebDashboardParent"
                android:text="@string/lbl_web_dashboard_power" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_web_dashboard_parent_ivPower"
                style="@style/Style_ivWebDashboard"
                android:src="@drawable/ic_dashboard_infinity_power" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_web_dashboard_parent_llBoiler"
            style="@style/Style_llWebDashboard">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Style_tvWebDashboardParent"
                android:text="@string/lbl_web_dashboard_boiler" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_web_dashboard_parent_ivBoiler"
                style="@style/Style_ivWebDashboard"
                android:src="@drawable/ic_dashboard_infinity_boiler" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_web_dashboard_parent_llChiller"
            style="@style/Style_llWebDashboard">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Style_tvWebDashboardParent"
                android:text="@string/lbl_web_dashboard_chiller" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_web_dashboard_parent_ivChiller"
                style="@style/Style_ivWebDashboard"
                android:src="@drawable/ic_dashboard_infinity_chiller" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
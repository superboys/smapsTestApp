<resources>
    <declare-styleable name="Knob">
        <attr name="kNumberOfStates" format="integer"/>
        <attr name="kDefaultState" format="integer"/>

        <attr name="kBorderWidth" format="dimension"/>
        <attr name="kBorderColor" format="reference|color"/>

        <attr name="kIndicatorWidth" format="dimension"/>
        <attr name="kIndicatorColor" format="reference|color"/>
        <attr name="kIndicatorRelativeLength" format="float"/>

        <attr name="kCircularIndicatorRelativeRadius" format="float"/>
        <attr name="kCircularIndicatorRelativePosition" format="float"/>
        <attr name="kCircularIndicatorColor" format="reference|color" />

        <attr name="kKnobColor" format="reference|color"/>
        <attr name="kKnobRelativeRadius" format="float"/>

        <attr name="kKnobCenterColor" format="reference|color"/>
        <attr name="kKnobCenterRelativeRadius" format="float"/>

        <attr name="kKnobDrawable" format="integer"/>
        <attr name="kKnobDrawableRotates" format="boolean"/>

        <attr name="kStateMarkersWidth" format="dimension"/>
        <attr name="kStateMarkersColor" format="reference|color"/>
        <attr name="kStateMarkersRelativeLength" format="float"/>
        <attr name="kSelectedStateMarkerColor" format="reference|color"/>
        <attr name="kSelectedStateMarkerContinuous" format="boolean"/>

        <attr name="kAnimation" format="boolean"/>
        <attr name="kAnimationSpeed" format="float"/>
        <attr name="kAnimationBounciness" format="float"/>

        <attr name="kSwipe">
            <enum name="off" value="0"/>
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
            <enum name="vertical_horizontal" value="3"/>
            <enum name="circular" value="4"/>
        </attr>
        <attr name="kSwipeSensitivityPixels" format="integer" />

        <attr name="kFreeRotation" format="boolean" />
        <attr name="kMinAngle" format="float"/>
        <attr name="kMaxAngle" format="float"/>

        <attr name="kStateMarkersAccentWidth" format="dimension"/>
        <attr name="kStateMarkersAccentColor" format="reference|color"/>
        <attr name="kStateMarkersAccentRelativeLength" format="float"/>
        <attr name="kStateMarkersAccentPeriodicity" format="integer"/>

        <attr name="kShowBalloonValues" format="boolean"/>
        <attr name="kBalloonValuesTimeToLive" format="integer"/>
        <attr name="kBalloonValuesRelativePosition" format="float"/>
        <attr name="kBalloonValuesTextSize" format="dimension"/>
        <attr name="kBalloonValuesAnimation">
            <enum name="pop" value="0"/>
            <enum name="scale" value="1"/>
            <enum name="fade" value="2"/>
        </attr>
        <attr name="kBalloonValuesArray" format="reference"/>
        <attr name="kBalloonValuesSlightlyTransparent" format="boolean"/>

        <attr name="kClickBehaviour">
            <enum name="nothing" value = "0"/>
            <enum name="next" value = "1"/>
            <enum name="prev" value = "2"/>
            <enum name="revert" value = "3"/>
            <enum name="menu" value = "4" />
            <enum name="user" value = "5" />
        </attr>

        <attr name="kEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="WheelPicker">
        <attr name="fadingEdgeEnabled" format="boolean" />
        <attr name="max" format="integer" />
        <attr name="min" format="integer" />
        <attr name="selectedTextColor" format="color" />
        <attr name="selectedTextScale" format="float" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="typeface" format="enum">
            <enum name="normal" value="0"/>
            <enum name="sans" value="1"/>
            <enum name="serif" value="2"/>
            <enum name="avantgardelt" value="3"/>
        </attr>
        <attr name="wheelItemCount" format="integer" />
        <attr name="wrapSelectorWheel" format="boolean" />
        <attr name="minValidIndex" format="integer" />
        <attr name="maxValidIndex" format="integer" />
        <attr name="align">
            <enum name="LEFT" value="0" />
            <enum name="CENTER" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomGauge">
        <attr name="gaugePointSize" format="integer" />
        <attr name="gaugePointStartColor" format="color" />
        <attr name="gaugePointEndColor" format="color" />
        <attr name="gaugeStrokeColor" format="color" />
        <attr name="gaugeStrokeWidth" format="dimension" />
        <attr name="gaugeStrokeCap" format="string" />
        <attr name="gaugeStartAngle" format="integer" />
        <attr name="gaugeSweepAngle" format="integer" />
        <attr name="gaugeStartValue" format="integer" />
        <attr name="gaugeEndValue" format="integer" />
        <attr name="gaugeDividerSize" format="integer" />
        <attr name="gaugeDividerColor" format="color" />
        <attr name="gaugeDividerStep" format="integer" />
        <attr name="gaugeDividerDrawFirst" format="boolean" />
        <attr name="gaugeDividerDrawLast" format="boolean" />
        <attr name="gaugeValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="WaveLoadingView">
        <attr name="wlv_borderWidth" format="dimension"/>
        <attr name="wlv_borderColor" format="color"/>
        <attr name="wlv_progressValue" format="integer"/>
        <attr name="wlv_shapeType" format="enum">
            <enum name="triangle" value="0" />
            <enum name="circle" value="1" />
            <enum name="square" value="2" />
            <enum name="rectangle" value="3" />
        </attr>
        <attr name="wlv_triangle_direction" format="enum">
            <enum name="north" value="0" />
            <enum name="south" value="1" />
            <enum name="east" value="2" />
            <enum name="west" value="3" />
        </attr>
        <attr name="wlv_round_rectangle" format="boolean"/>
        <attr name="wlv_round_rectangle_x_and_y" format="integer"/>
        <attr name="wlv_waveColor" format="color"/>
        <attr name="wlv_wave_background_Color" format="color"/>
        <attr name="wlv_waveAmplitude" format="float"/>
        <attr name="wlv_titleTop" format="string"/>
        <attr name="wlv_titleCenter" format="string"/>
        <attr name="wlv_titleBottom" format="string"/>
        <attr name="wlv_titleTopSize" format="dimension"/>
        <attr name="wlv_titleCenterSize" format="dimension"/>
        <attr name="wlv_titleBottomSize" format="dimension"/>
        <attr name="wlv_titleTopColor" format="color"/>
        <attr name="wlv_titleCenterColor" format="color"/>
        <attr name="wlv_titleBottomColor" format="color"/>
        <attr name="wlv_titleTopStrokeColor" format="color"/>
        <attr name="wlv_titleTopStrokeWidth" format="dimension"/>
        <attr name="wlv_titleBottomStrokeColor" format="color"/>
        <attr name="wlv_titleBottomStrokeWidth" format="dimension"/>
        <attr name="wlv_titleCenterStrokeColor" format="color"/>
        <attr name="wlv_titleCenterStrokeWidth" format="dimension"/>
    </declare-styleable>

</resources>
